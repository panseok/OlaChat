<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/invite_friend_layout"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:background="@drawable/dialog_background5">
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <TextView
            android:background="@drawable/btn_background7_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="초대 알림"
            android:textColor="@color/white"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/background_bar_image"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/dialog_invite_profile_image_layout"
                        android:background="@drawable/profile_default_image"
                        >
                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/dialog_invite_default_bar_image"
                            android:background="@drawable/profile_bar_default_image"
                            />
                    </FrameLayout>
                </LinearLayout>
                <View
                    android:layout_width="5dp"
                    android:layout_height="fill_parent"/>
                <TextView
                    android:layout_margin="5dp"
                    android:id="@+id/dialog_invite_username"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFD600"
                    android:text="name"/>
                <TextView
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="님이"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="111번 테스트스틋트"
                android:id="@+id/dialog_invite_roominfo"
                android:layout_gravity="center"
                android:gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="방으로 초대하였습니다."
                android:layout_gravity="center"
                android:gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/background_bar_image"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="초대를 수락하시겠습니까?"
                android:layout_gravity="center"
                android:gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/background_bar_image"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textSize="18sp"
                    android:text="거절"
                    android:id="@+id/btn_invite_f"
                    android:background="@drawable/btn_background2_image"
                    android:layout_gravity="center"/>
                <View
                    android:layout_width="5dp"
                    android:layout_height="fill_parent"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textSize="18sp"
                    android:text="수락"
                    android:id="@+id/btn_invite_t"
                    android:background="@drawable/btn_background2_image"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    </LinearLayout>
</LinearLayout>