<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/invite_friend_layout"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:background="@drawable/dialog_background5">
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <TextView
            android:background="@drawable/btn_background7_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="폭탄 도착"
            android:textColor="#FF0000"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/background_bar_image"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"/>
        <ImageView
            android:id="@+id/boom_gif_img"
            android:layout_margin="20dp"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/boom_arrival_text"
            android:layout_gravity="center"
            android:text="test"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>