<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/invite_friend_layout"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:background="@drawable/dialog_background5">
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <TextView
            android:background="@drawable/btn_background7_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="친구 초대"
            android:textColor="@color/white"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/background_bar_image"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"/>
        <ListView
            android:id="@+id/dialog_inviteF_list"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:listSelector="#00000000"
            android:transcriptMode="normal"
            android:divider="#00000000"
            android:dividerHeight="3dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textSize="18sp"
            android:text="닫기"
            android:id="@+id/btn_close_inviteF"
            android:background="@drawable/btn_background2_image"
            android:layout_gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    </LinearLayout>
</LinearLayout>