<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_default2"
    android:orientation="vertical">
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/game_boom_spin_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5.0dip"
        android:layout_weight="1.0">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:gravity="left|center">
                <View
                    android:layout_width="10dp"
                    android:layout_height="fill_parent"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:fontFamily="@font/christmascards"
                        android:padding="3dp"
                        android:textSize="18.0sp"
                        android:textColor="#ffffffff"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="37dp"
                        android:textStyle="bold"
                        android:text="Day " />
                    <TextView
                        android:fontFamily="@font/christmascards"
                        android:id="@+id/boom_spin_day"
                        android:padding="3dp"
                        android:textSize="18.0sp"
                        android:textColor="#ffffffff"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="37dp"
                        android:textStyle="bold"
                        android:text="0" />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/game_boom_spin_coin"/>
                    <TextView
                        android:fontFamily="@font/christmascards"
                        android:id="@+id/boom_spin_mycoin"
                        android:textSize="18.0sp"
                        android:textColor="@color/white"
                        android:gravity="center|left"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="37dp"
                        android:padding="3dp"
                        android:text="0" />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/game_boom_spin_time"/>
                    <TextView
                        android:id="@+id/boom_time"
                        android:textSize="18.0sp"
                        android:textColor="#FF0000"
                        android:gravity="center|left"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="37dp"
                        android:padding="3dp"
                        android:text="0" />
                    <TextView
                        android:textSize="16.0sp"
                        android:textColor="#FF0000"
                        android:gravity="center|left"
                        android:layout_width="wrap_content"
                        android:layout_height="37dp"
                        android:padding="3dp"
                        android:text="초"
                        android:textStyle="bold"/>
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"/>
                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/btn_game_boom_skill_book"
                    android:background="@drawable/btn_book"
                    android:scaleType="fitCenter" />
                <View
                    android:layout_width="10dp"
                    android:layout_height="fill_parent"/>
                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/btn_game_boom_spin_drawer"
                    android:background="@drawable/btn_game_bomm_spin_chat"
                    android:scaleType="fitCenter" />
                <View
                    android:layout_width="10dp"
                    android:layout_height="fill_parent"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/background_bar_image"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_background6_image"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="플레이어 목록"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="11sp" />
                    <View
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/background_bar_image"/>
                    <GridView
                        android:id="@+id/game_boom_spin_grid"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_margin="10dp"
                        android:horizontalSpacing="4.0dip"
                        android:listSelector="#00000000"
                        android:numColumns="8"
                        android:scrollbars="none"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="8.0dip" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7"
                android:layout_margin="10dp"
                android:background="@drawable/btn_background6_image"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:text="알림판"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        />
                    <View
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/background_bar_image"/>
                    <ListView
                        android:id="@+id/game_boom_spin_notice_list"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:stackFromBottom="true"
                        android:listSelector="#00000000"
                        android:transcriptMode="normal"
                        android:divider="#00000000"
                        android:dividerHeight="0.20000005dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/btn_background6_image"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:text="나의 능력"
                        android:textColor="@color/white"
                        android:gravity="center"
                        />
                    <View
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/background_bar_image"/>
                    <ListView
                        android:id="@+id/game_boom_spin_myskill_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:stackFromBottom="false"
                        android:listSelector="#00000000"
                        android:transcriptMode="normal"
                        android:divider="#00000000"
                        android:dividerHeight="0.20000005dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_weight="7.0"
            android:orientation="vertical"
            android:background="@drawable/btn_background2_image"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0">
                <ListView
                    android:id="@+id/game_chat_listview"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:stackFromBottom="true"
                    android:background="@android:color/transparent"
                    android:listSelector="#00000000"
                    android:transcriptMode="normal"
                    android:divider="#00000000"
                    android:dividerHeight="0.20000005dp"
                    />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal"
                android:background="#ffffffff"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:weightSum="100.0">
                <EditText
                    android:textColor="@android:color/black"
                    android:id="@+id/chat_edittext"
                    android:background="#9a9c9c9c"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_margin="5.0dip"
                    android:layout_weight="88.0" />
                <ImageButton
                    android:id="@+id/btn_game_boom_spin_send_chat"
                    android:background="#00000000"
                    android:padding="0.0dip"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_margin="3.0dip"
                    android:src="@drawable/btn_chat_send_setting"
                    android:scaleType="centerCrop"
                    android:layout_weight="12.0" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_weight="7.0"
            android:orientation="vertical"
            android:background="@drawable/btn_background2_image"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0">
                <TextView
                    android:background="@drawable/btn_background_image"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="게임 설명"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
                <ListView
                    android:id="@+id/game_user_help_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stackFromBottom="false"
                    android:background="@drawable/dialog_background_image"
                    android:listSelector="#00000000"
                    android:transcriptMode="normal"
                    android:divider="#00000000"
                    android:dividerHeight="0.20000005dp"
                    android:padding="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0">
                <TextView
                    android:background="@drawable/btn_background_image"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="기본 능력 목록"
                    />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <ListView
                    android:id="@+id/game_user_passive_skill_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stackFromBottom="false"
                    android:background="@drawable/dialog_background_image"
                    android:listSelector="#00000000"
                    android:transcriptMode="normal"
                    android:divider="#00000000"
                    android:dividerHeight="0.20000005dp"
                android:padding="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_background_image"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="경매 능력 목록"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
                <ListView
                    android:id="@+id/game_user_auction_skill_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stackFromBottom="false"
                    android:background="@drawable/dialog_background_image"
                    android:listSelector="#00000000"
                    android:transcriptMode="normal"
                    android:divider="#00000000"
                    android:dividerHeight="0.20000005dp"
                    android:padding="5dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>