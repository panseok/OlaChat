<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/game_exit_image_layout"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@drawable/dialog_background6">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="종료"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/comment2_all"
            android:text="정말로 앱을 종료하시겠습니까?"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_margin="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_background2_image"
                android:text="취소"
                android:id="@+id/btn_game_exit_no"
                />
            <View
                android:layout_width="30dp"
                android:layout_height="0dp"/>
            <Button
                android:background="@drawable/btn_background2_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인"
                android:id="@+id/btn_game_exit_ok"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>