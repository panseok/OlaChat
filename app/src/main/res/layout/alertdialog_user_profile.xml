<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:background="@drawable/dialog_background6"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="10dp"
                android:layout_height="fill_parent"/>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="120dp"
                android:layout_height="120dp">
                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/dialog_profile_image_layout"
                    android:background="@drawable/profile_default_image">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/dialog_profile_default_bar_image"
                        android:background="@drawable/profile_bar_default_image" />
                </FrameLayout>
            </LinearLayout>
            <View
                android:layout_width="10dp"
                android:layout_height="fill_parent"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/dialog_profile_userPopularity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="인기도 :"
                    />
                <TextView
                    android:id="@+id/dialog_profile_userWin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="0 승"
                    />
                <TextView
                    android:id="@+id/dialog_profile_userLose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="0 패"
                    />
                <TextView
                    android:id="@+id/dialog_profile_userMemo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:background="@drawable/comment2_all"
                    android:padding="5.0dip"
                    android:text="메모입니다."
                    />
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/btn_dialog_profile_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_close"
                android:scaleType="fitCenter"
                android:layout_gravity="right"/>
            <View
                android:layout_width="10dp"
                android:layout_height="fill_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <View
                android:layout_width="10dp"
                android:layout_height="fill_parent"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:id="@+id/dialog_profile_username"
                android:background="@drawable/btn_background3_image"
                android:text="이름"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <View
                android:layout_width="10dp"
                android:layout_height="fill_parent"/>
            <View
                android:layout_width="10dp"
                android:layout_height="fill_parent"/>
            <View
                android:layout_width="10dp"
                android:layout_height="fill_parent"/>
            <ImageView
                android:id="@+id/dialog_profile_isOnline"
                android:layout_gravity="center"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/img_user_off"/>
            <View
                android:layout_width="10dp"
                android:layout_height="fill_parent"/>
            <TextView
                android:id="@+id/dialog_profile_isOnline_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="온오프라인"
                />
            <View
                android:layout_width="10dp"
                android:layout_height="fill_parent"/>
            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/btn_dialog_removeFriend"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/btn_friend_delete"
                android:scaleType="fitCenter"
                android:layout_gravity="right|center"/>
            <View
                android:layout_width="10dp"
                android:layout_height="fill_parent"/>
            <ImageButton
                android:id="@+id/btn_dialog_addFriend"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/btn_friend_add"
                android:scaleType="fitCenter"
                android:layout_gravity="right|center"/>
            <View
                android:layout_width="10dp"
                android:layout_height="fill_parent"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    </LinearLayout>
</LinearLayout>