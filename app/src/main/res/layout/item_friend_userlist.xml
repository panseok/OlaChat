<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friend_userlist_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/btn_background5_image"
    android:orientation="horizontal"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="10dp"
            android:layout_height="fill_parent" />

        <FrameLayout
            android:id="@+id/friend_user_profile_image_layout"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/profile_default_image">

            <ImageView
                android:id="@+id/friend_user_default_bar_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/profile_bar_default_image" />
        </FrameLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="fill_parent" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/friend_username"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="닉네임"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="fill_parent" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/friend_isOnline"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:background="@drawable/img_user_off" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="fill_parent" />

                <TextView
                    android:id="@+id/friend_isOnline_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="온오프라인"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="fill_parent" />
            </LinearLayout>

            <TextView
                android:id="@+id/friend_usermemo"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="left|center"
                android:text="메모"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />
    </LinearLayout>
</LinearLayout>