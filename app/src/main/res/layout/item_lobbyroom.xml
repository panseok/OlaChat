<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:weightSum="100"
    android:id="@+id/lobby_layout"
    android:orientation="horizontal"
    android:layout_height="50dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="fill_parent"
        android:layout_width="match_parent"
        android:background="@drawable/btn_room_list_setting"
        >
        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"/>
        <TextView android:id="@+id/lobbyroom_num"
            android:layout_height="fill_parent"
            android:text="asdf"
            android:layout_width="wrap_content"
            android:gravity="center"/>
        <TextView android:id="@+id/lobbyroom_name"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:gravity="left|center"
            android:layout_gravity="center"
            android:text="roomname"
            android:paddingLeft="10dp"
            android:textColor="@color/white"/>
    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background7_image"
            android:orientation="horizontal">
            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/lobbyroom_member_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="10" />
            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="/"
                android:textColor="@color/white" />
            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/lobbyroom_member_maxcount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="10" />
            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>